<div id="message-<%= message.id %>">
  <small>
  <div class="py-0 pr-2 d-flex">
    <strong><%= message.user.first_name %></strong>
    <i> &nbsp (<%= message.created_at > Time.now.change(hour: 0, min:0, sec:0) ?
              time_ago_in_words(message.created_at)+" ago" : message.created_at.strftime("%a %b %e at %l:%M %p")
    %>)</i>
    <i class="fa-solid fa-check ms-auto" style="color:<%= message.read ? "#0c5fed;" : "#13955d" %>" title="<%= message.read ? "read" : "unread" %>""></i>
  </div>
  </small>
  <p class="px-2"><%= message.content %></p>
</div>
