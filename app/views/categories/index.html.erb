<h1>Categories</h1>

<ul class="list-group">
  <% @categories.each do |category| %>
    <li class="list-group-item p-0 mt-1">
      <div class="d-flex justify-content-between w-100">
        <div class="p-2">
          <h2 class="mx-0 my-auto"><%=link_to category.name, category_path(category.id) %></h2>
        </div>
        <% if current_user.admin? %>
          <div class="p-2">
            <%= link_to "Edit", edit_category_path(category), class: "btn btn-warning m-1" %>
          </div>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>

<% if current_user.admin? %>
  <%= link_to "Add a category", new_category_path, class: "btn btn-success d-block mx-auto my-3" %>
<% end %>
