<div class="container">
  <div class="row text-center mx-1 my-2 border border-success rounded  rounded-5 bg-danger" style="min-height: 70vh">
    <h1 class="text-center mt-3">Inbox<hr></h1>

    <h3>Ongoing bookings</h3>
    <%= render "bookings/inboxlist", bookings: @ongoing %>
    <hr>


    <h3>Pending booking requests:</h3>
    <%= render "bookings/inboxlist", bookings: @pending_requests %>
    <hr>

    <h3>Accepted booking requests:</h3>
    <%= render "bookings/inboxlist", bookings: @accepted %>
    <hr>

    <h3>Declined booking requests:</h3>
    <%= render "bookings/inboxlist", bookings: @declined %>
    <hr>

    <h3>Compeleted booking requests:</h3>
    <%= render "bookings/inboxlist", bookings: @completed %>
    <hr>
  </div>
</div>
